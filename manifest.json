{
	"manifest_version": 2,
	"name": "SCP Wiki Improvements",
	"version": "3.0",
	"author": "Oliver Robey",
	
	"description": "Makes various improvements to the SCP wiki (scp-wiki.wikidot.com)",
	
	"permissions": [ "storage", "https://scp-wiki.wikidot.com/*" ],
	
	"icons": {
		"16": "icon-16.png",
		"32": "icon-32.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	
	"browser_action": {
		"default_icon": {
			"16": "icon-16.png",
			"32": "icon-32.png",
			"48": "icon-48.png",
			"128": "icon-128.png"
		},
		"default_title": "SCP Wiki Improvements",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [
		{
			"matches": [ "https://scp-wiki.wikidot.com/*" ],
			"js": [ "scp-ratings-in-mainlist.js" ]
		}
	]
}
